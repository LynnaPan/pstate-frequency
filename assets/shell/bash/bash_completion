_pstate-frequency()
{
    local cur prev short_actions shorts_options long_options long_actions plans
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    short_actions="-v -h -s -g -d -q"
    long_actions="--quiet --version --help --set --get --quiet"
    shorts_options="-m -n -t -p"
    long_options="--max --min --turbo --plan"
    plans="powersave performance max-performance"
    if [[ ${cur} = --* ]]; then
        if [[ ${prev} = "--set" ]]; then
            COMPREPLY=( $(compgen -W "${long_options}" -- ${cur}) )
        else
            if [[ ${prev} = "--plan" ]]; then
                COMPREPLY=( $(compgen -W "${plans}" -- ${cur}) )
            else
                COMPREPLY=( $(compgen -W "${long_actions}" -- ${cur}) )
            fi
        fi
        return 0
    else
        if [[ ${cur} = * ]]; then
            if [[ ${prev} = "-s" ]]; then
                COMPREPLY=( $(compgen -W "${shorts_options}" -- ${cur}) )
            else
                if [[ ${prev} = "-p" ]]; then
                    COMPREPLY=( $(compgen -W "${plans}" -- ${cur}) )
                else
                    COMPREPLY=( $(compgen -W "${short_actions}" -- ${cur}) )
                fi
            fi
        fi
        return 0
    fi
    unset cur short_actions shorts_options long_options long_actions plans prev
}

complete -F _pstate-frequency pstate-frequency
