prepare() {
	cd "$_PROJECTDIR"
	make options \
		CXX="${_CXX}"
}

build() {
	cd "$_PROJECTDIR"
	make \
		CXX="${_CXX}" \
		INCLUDE_UDEV_RULE=${_INCLUDE_UDEV_RULE}
}

package() {
	cd "$_PROJECTDIR"
	make \
		DESTDIR="$pkgdir" \
		CXX="${_CXX}" \
		PREFIX="${_PREFIX}" \
		INCLUDE_BASH_COMPLETION=${_INCLUDE_BASH_COMPLETION} \
		INCLUDE_ZSH_COMPLETION=${_INCLUDE_ZSH_COMPLETION} \
		INCLUDE_UDEV_RULE=${_INCLUDE_UDEV_RULE} \
		INCLUDE_SYSTEMD_UNIT=${_INCLUDE_SYSTEMD_UNIT} \
		install
}

